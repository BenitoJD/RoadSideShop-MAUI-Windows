<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadSideShop.Pages.MainPage"
             xmlns:vm="clr-namespace:RoadSideShop.ViewModels"
             xmlns:data="clr-namespace:RoadSideShop.Data"
             xmlns:models="clr-namespace:RoadSideShop.Models"
             Shell.NavBarIsVisible="False"
             x:DataType="vm:HomeViewModel">

    <Grid ColumnDefinitions=".75*,.25*">
        <Grid Grid.Column="0"
              RowDefinitions="Auto,Auto,*" 
              RowSpacing="15"
              Padding="15">
            <Label Grid.Row="0" Text="Hello, Benito" FontSize="22" FontAttributes="Bold"/>

            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal" 
                        ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuCategoryModel">
                        <Border Padding="20, 10" 
                                BackgroundColor="{StaticResource LightWheat}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness ="0">
                            <HorizontalStackLayout Spacing="5">
                                <Image Source="{Binding Icon}" 
                                       VerticalOptions="Center"
                                       HeightRequest="20"
                                       WidthRequest="20"/>

                                <Label Text="{Binding Name}"
                                       VerticalOptions="Center"
                                       TextColor="Maroon">
                                    <Label.Triggers>
                                        <DataTrigger  
                                             Binding="{Binding IsSelected}"
                                             TargetType="Label"
                                             Value = "True">
                                            <Setter Property="TextColor" Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" 
                                             Binding="{Binding IsSelected}" 
                                             Value = "True">
                                    <Setter Property="BackgroundColor" Value="Maroon"/>
                                </DataTrigger>

                            </Border.Triggers>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{
                                    Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}},
                                    Path=SelectCategoryCommand}"
                                    CommandParameter="{Binding Id}"/>
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Grid Grid.Row="2">
                <CollectionView 
                    ItemsSource ="{Binding MenuItems}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout 
                            Orientation="Vertical" 
                            Span="4" 
                            HorizontalItemSpacing="10" 
                            VerticalItemSpacing="10" />

                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="data:MenuItem">
                            <Border 
                                Padding="10" 
                                StrokeShape="RoundRectangle 10" 
                                Stroke="#DDD">
                                <VerticalStackLayout Spacing="10">
                                    <Border 
                                        BackgroundColor="{StaticResource LightWheat}" 
                                        HeightRequest="150" 
                                        StrokeThickness="0">
                                        <Image 
                                            Source="{Binding Icon}"
                                               WidthRequest="250"
                                               MaximumHeightRequest="150"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Aspect="Center"/>
                                    </Border>
                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold" 
                                           FontSize="20"/>
                                    <Label Text="{Binding Description}" 
                                           FontSize="12"
                                           TextColor="Gray"
                                           />
                                    <FlexLayout JustifyContent="SpaceBetween">
                                        <Label Text="{Binding Price, StringFormat='{0:C}'}"
                                               FontSize="25"
                                               FontAttributes="Bold"
                                               TextColor="Maroon"/>
                                        <ImageButton 
                                            Source="shoppingbag.gif"
                                            HeightRequest="25" 
                                            WidthRequest="25"
                                            BackgroundColor="{StaticResource LightWheat}" 
                                            CornerRadius="8"
                                            />
                                    </FlexLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView 
                         IsVisible="{Binding IsLoading}" 
                         HorizontalOptions="Fill"
                         VerticalOptions="Fill"
                         Color="{StaticResource LightWheat}"
                         Opacity="0.5"/>
                <ActivityIndicator 
                         IsRunning="{Binding IsLoading}"
                         HeightRequest="25"
                         WidthRequest="25"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Color="Maroon"/>
            </Grid>    
        </Grid>
        <Grid Grid.Column="1" BackgroundColor="{StaticResource LightWheat}">
            <Label Text="Current Order Items" />

        </Grid>
    </Grid>

</ContentPage>
